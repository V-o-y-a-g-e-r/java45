<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

     <navigation-rule>
        <from-view-id>/*</from-view-id>
        <navigation-case>
            <!--add flight to stack-->
            <from-outcome>flight</from-outcome>
            <to-view-id>/flight.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>passenger</from-outcome>
            <to-view-id>/passenger.xhtml</to-view-id>
            <!--with this can go back in browser-->
            <redirect/>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>editflight</from-outcome>
            <to-view-id>/editflight.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>editpassenger</from-outcome>
            <to-view-id>/editpassenger.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        
    </navigation-rule> 
</faces-config>
